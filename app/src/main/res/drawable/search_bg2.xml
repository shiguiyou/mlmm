<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#f6f6f6"/>
            <corners android:radius="40dip"/>
        </shape>
    </item>
    <!-- 主体背景颜色值  在item中的都指定了1dp的边框线-->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <!--中间背景填充色-->
            <solid android:color="#f6f6f6"/>
            <corners android:radius="40dip"/>
        </shape>
    </item>
</layer-list>