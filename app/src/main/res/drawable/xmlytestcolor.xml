<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!-- 边框颜色值 -->
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
            <!-- 主体背景颜色值  在item中的top与bottom各指定了1dp的边框线-->
            <item android:top="0dp" android:bottom="4dp" android:left="0dp" android:right="0dp">
                <shape>
                    <!--中间背景填充色-->
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <!-- 边框颜色值 -->
            <item>
                <shape>
                    <solid android:color="#f75e3a"/>
                </shape>
            </item>
            <!-- 主体背景颜色值  在item中的top与bottom各指定了1dp的边框线-->
            <item android:top="0dp" android:bottom="2dp" android:left="0dp" android:right="0dp">
                <shape>
                    <!--中间背景填充色-->
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
