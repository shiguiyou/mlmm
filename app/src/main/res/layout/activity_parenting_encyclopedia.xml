<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f6"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wanquan.mlmmx.mlmm.activity.ParentingEncyclopediaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ParentingEncyclopedia_Bank"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/zhishisousuo" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/search_bg3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/baike_search" />

                <TextView
                    android:id="@+id/ParentingEncyclopedia_Search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="输入搜索关键字"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ParentingEncyclopedia_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#b4b4b4" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/ParentingEncyclopedia_RecyclerView_Two"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <com.wanquan.mlmmx.mlmm.view.MyScrollView
            android:id="@+id/ParentingEncyclopedia_MyScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wanquan.mlmmx.mlmm.view.MyListView
                android:id="@+id/ParentingEncyclopedia_RecyclerView_Two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null">

            </com.wanquan.mlmmx.mlmm.view.MyListView>
        </com.wanquan.mlmmx.mlmm.view.MyScrollView>
    </LinearLayout>
</LinearLayout>

