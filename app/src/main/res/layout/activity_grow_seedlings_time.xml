    <!--android:layout_height="match_parent"-->
    <!--android:scrollbars="none">-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/GrowSeedlingsTime_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
