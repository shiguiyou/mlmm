<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lookPhoto_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_white_9">
            <Button
                android:id="@+id/chioce_camera"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textColor="@color/text_black"
                android:textSize="17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/layout_border_bottom1_white"/>

            <Button
                android:id="@+id/chioce_photo"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textColor="@color/text_black"
                android:textSize="17sp" />
        </LinearLayout>


        <Button
            android:id="@+id/chioce_cancle"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:textColor="@color/text_black"
            android:textSize="17sp"
            android:background="@drawable/shape_white_9"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>