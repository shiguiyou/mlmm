<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wanquan.mlmmx.mlmm.activity.SettingSGTZActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/tops">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="SettingSGTZ_Bank">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/arrowwhite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="#ffffff"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:text="身高体重设置"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/SettingSGTZ_Save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tops"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/setting_sgtz_write_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/addcan"/>

                <TextView
                    android:id="@+id/SettingSGTZ_Time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:hint="今天"
                    android:textColor="@color/tops"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/SettingSGTZ_Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="身高/cm"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="体重/kg"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/SettingSGTZ_EditText1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/setting_sgtz_write_bg"
                android:gravity="center"
                android:hint="00.0"
                android:inputType="numberDecimal"
                android:textColor="@color/tops"
                android:textColorHint="#cccccc"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/SettingSGTZ_EditText2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/setting_sgtz_write_bg"
                android:gravity="center"
                android:hint="00.0"
                android:inputType="numberDecimal"
                android:textColor="@color/tops"
                android:textColorHint="#cccccc"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
