                            android:id="@+id/SendInvitation_Img6"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/SendInvitation_Delete6"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/cancelss" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SendInvitation_Rel7"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/SendInvitation_Img7"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/SendInvitation_Delete7"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/cancelss" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SendInvitation_Rel8"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/SendInvitation_Img8"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/upimg_logo"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
