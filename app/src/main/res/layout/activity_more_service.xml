<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wanquan.mlmmx.mlmm.activity.MoreServiceActivity">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b4b4b4"/>

    <com.wanquan.mlmmx.mlmm.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/MoreService_TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="孕期工具"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <com.wanquan.mlmmx.mlmm.phone.MyGridView
                android:id="@+id/MoreService_MyGridView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp">

            </com.wanquan.mlmmx.mlmm.phone.MyGridView>

            <TextView
                android:id="@+id/MoreService_TextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="育儿工具"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <com.wanquan.mlmmx.mlmm.phone.MyGridView
                android:id="@+id/MoreService_MyGridView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp">

            </com.wanquan.mlmmx.mlmm.phone.MyGridView>

            <TextView
                android:id="@+id/MoreService_TextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="其它"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <com.wanquan.mlmmx.mlmm.phone.MyGridView
                android:id="@+id/MoreService_MyGridView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp">


            </com.wanquan.mlmmx.mlmm.phone.MyGridView>

        </LinearLayout>
    </com.wanquan.mlmmx.mlmm.view.MyScrollView>
</LinearLayout>
