<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.wanquan.mlmmx.mlmm.view.SwipeLayout
        android:id="@+id/item_ble_SwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:id="@+id/item_ble_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/devicexiaomi"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_ble_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="便携式检测仪"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/arrowright"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_ble_name_t1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#aaaaaa"
                android:gravity="center"
                android:text="修改名称"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/item_ble_name_t2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/item_ble_name_t1"
                android:background="#fd6262"
                android:gravity="center"
                android:text="删除"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>
        </RelativeLayout>
    </com.wanquan.mlmmx.mlmm.view.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"/>
</LinearLayout>