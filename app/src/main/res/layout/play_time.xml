<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/delete_dialog"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:text="定时设置"
            android:textColor="#333333"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/Play_Time_One"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="1首"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="5首"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="10首"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Four"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="20首"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Five"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="10分钟"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Six"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="20分钟"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Seven"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="30分钟"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Eight"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="60分钟"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Nine"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="90分钟"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Play_Time_Ten"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="一直播放"
        android:textColor="#333333"
        android:textSize="14sp"/>

</LinearLayout>
